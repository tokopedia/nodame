{
    "server": {
        "maintenance": false,
        "powered_by": false,
        "port": 3000,
        "release_env": ["production", "staging"],
        "enforce_secure": false,
        "hooks": [],
        "block_favicon": true
    },
    "app": {
        "title": "Nodame",
        "title_separator": "|",
        "desc": "Nodame is a node.js framework built on express 4.0"
    },
    "cookie": {
        "domain": "localhost",
        "session": "_NODAME_",
        "secret": "$uSm~a!yGi6zqj+7_K%Crvk0wxstO2Ae"
    },
    "url": {
        "hostname": "http://localhost:3000"
    },
    "devices": {
        "cookie": "_src",
        "_default": { "id": "_default", "name": "default", "type": "default" },
        "types": [
            { "id": "1", "name": "android", "type": "app" },
            { "id": "2", "name": "ios", "type": "app" }
        ]
    },
    "view": {
        "template": "default",
        "device_capture": true,
        "mobile": false,
        "enforce_mobile": false,
        "enforce_mobile_type": "soft",
        "enforce_whitelist": false,
        "cache": false,
        "cache_template": true,
        "purge_time": 60,
        "cache_time": 900,
        "redirect_404": false
    },
    "assets": {
        "enable_server": true,
        "route": "/assets",
        "dir": "./assets"
    },
    "locale": {
        "enable": true,
        "default": "en"
    },
    "cache": {
        "enable": false,
        "db_server": "redis",
        "db": {
            "redis": {
                "enable": false
            }
        }
    },
    "email": {
        "enable": false,
        "client": "mandrill"
    },
    "session": {
        "enable": false,
        "key": "_sid",
        "domain": "localhost",
        "expires": 3600,
        "request_token": false,
        "request_token_module": "request_token"
    },
    "notification": {
        "enable": false,
        "clients": {
            "slack": {
                "enable": false,
                "auto_reconnect": true,
                "auto_mark": true
            }
        }
    },
    "logger": {
        "enable": false,
        "clients": {
            "morgan": {
                "enable": true
            },
            "syslog": {
                "enable": false,
                "error_stream": "./logs/error.log",
                "output_stream": "./logs/output.log"
            },
            "sentry": {
                "enable": false
            },
            "email": {
                "enable": false
            },
            "console": {
                "enable": true
            },
            "datadog": {
                "enable": false,
                "host": "127.0.0.1",
                "port": "8125",
                "key": {
                    "error": "errors.nodame"
                }
            }
        }
    },
    "module": {
        "root": "/",
        "default": "home",
        "forbidden": "404",
        "items": {
            "__default": {
                "enable": true,
                "ajax": true,
                "xhr_only": false,
                "dev_only": false,
                "auth_only": false,
                "guest_only": false,
                "middleware": false
            }
        }
    },
    "menu": {
        "enable": true,
        "font_icon": false,
        "font_icon_class": "icon-",
        "items": {
            "__default": {
                "enable": true,
                "url": "#",
                "font_icon": "",
                "guest_only": false,
                "auth_only": false,
                "hide_app": false
            }
        }
    }
}
